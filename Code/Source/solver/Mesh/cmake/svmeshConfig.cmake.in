# svmeshConfig.cmake - Configuration file for svmesh library

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find dependencies if they were enabled
if(@MESH_ENABLE_MPI@)
    find_dependency(MPI)
endif()

if(@MESH_ENABLE_VTK@)
    find_dependency(VTK)
endif()

# Include the targets file
include("${CMAKE_CURRENT_LIST_DIR}/svmeshTargets.cmake")

# Set variables for consumers
set(SVMESH_INCLUDE_DIRS "@CMAKE_INSTALL_INCLUDEDIR@/svmesh")
set(SVMESH_LIBRARIES svmesh::svmesh)
set(SVMESH_HAS_MPI @MESH_ENABLE_MPI@)
set(SVMESH_HAS_VTK @MESH_ENABLE_VTK@)

check_required_components(svmesh)
